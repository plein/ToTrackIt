# ToTrackIt Environment Configuration Example
# Copy this file to .env and customize the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=totrackit
POSTGRES_USER=totrackit
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_PORT=5432

# PostgreSQL Performance Tuning (Production)
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_PORT=8080
APP_REPLICAS=1

# JVM Configuration
JVM_MIN_HEAP=256m
JVM_MAX_HEAP=512m

# Database Connection Pool
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5

# =============================================================================
# DOCKER IMAGE CONFIGURATION
# =============================================================================
TOTRACKIT_IMAGE=totrackit:latest

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
METRICS_ENABLED=true
HEALTH_CHECKS_ENABLED=true
LOG_LEVEL=INFO

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d
PROMETHEUS_RETENTION_SIZE=10GB
PROMETHEUS_LOG_LEVEL=info

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_secure_password
GRAFANA_SECRET_KEY=change_this_secret_key_to_something_random
GRAFANA_ROOT_URL=http://localhost:3000
GRAFANA_SERVE_FROM_SUB_PATH=false
GRAFANA_LOG_LEVEL=info
GRAFANA_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel

# Alertmanager
ALERTMANAGER_PORT=9093
ALERTMANAGER_LOG_LEVEL=info

# Node Exporter
NODE_EXPORTER_PORT=9100
NODE_EXPORTER_LOG_LEVEL=info

# cAdvisor
CADVISOR_PORT=8082

# =============================================================================
# NGINX CONFIGURATION (Production)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================
TZ=UTC

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Add any additional security-related environment variables here